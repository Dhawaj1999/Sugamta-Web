 
 
 @model Sugamta.Web.Models.UserEntity


@* <div class="modal-body">  *@
    
    <form id="editForm" asp-action="Edit" asp-controller="UserEntity" method="Post">
        
        
        <div class="form-group">
            <label asp-for="Email" class="control-label" style="margin-left:10px"></label>
            <input id="EmailInput2" asp-for="Email" class="form-control" style="margin-left:128px; margin-top:-37px; width:355px" />
           
        </div>
        <div class="form-group">
             <label asp-for="Name" class="control-label" style="margin-left:10px"></label>
             <input id="nameInput" asp-for="Name" class="form-control" style="margin-left:128px; margin-top:-37px; width:355px" />
           
        </div>
        <div class="form-group">
             <label asp-for="Password" class="control-label" style="margin-left:10px"></label>
             <input id="passwordInput" asp-for="Password" class="form-control" style="margin-left:128px; margin-top:-37px; width:355px" />
           
        </div>
        <div class="form-group">
             <label asp-for="RoleId" class="control-label" style="margin-left:10px"></label>
             <input id="roleIdInput" asp-for="RoleId" class="form-control" style="margin-left:128px; margin-top:-37px; width:355px" />
                 
        </div>
        <div class="form-group">
              <label asp-for="CreationDate" class="control-label" style="margin-left:10px"></label>
              <input id="creationDateInput" asp-for="CreationDate" class="form-control" style="margin-left:128px; margin-top:-37px; width:355px" />
           
        </div>
        <div class="form-group">
              <label asp-for="CreatedBy" class="control-label" style="margin-left:10px"></label>
              <input id="createdByInput" asp-for="CreatedBy" class="form-control" style="margin-left:128px; margin-top:-37px; width:355px" />
            
        </div> 
        <div class="form-group">
              <label asp-for="IsDeleted" class="control-label" style="margin-left:10px"></label>
              <input id="isDeletedInput" asp-for="IsDeleted" class="form-control" style="margin-left:128px; margin-top:-37px; width:355px" />
                 
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" style="margin-left:12px; width:87px"/>
        </div>
    </form>
@*  </div>  *@

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

<script>
    $(document).ready(function () {
        $('#editForm').submit(function (e) {
            e.preventDefault();

            $.ajax({
                url: $(this).attr('action'),
                type: $(this).attr('method'),
                data: $(this).serialize(),
                success: function (result) {
                    // Hide the modal upon successful submission
                    console.log('Success callback executed');
                    $('#editUserModal').modal('hide');
                   
                },
                error: function (error) {
                    console.error(error);
                }
            });
            location.reload();
        });
    });
    
   
</script>


